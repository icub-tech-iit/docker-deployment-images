#here add all stuff necessary to run redball demo in gazebo
#start from image passed by argument during build process. 
ARG SOURCE_IMG="none"
ARG START_IMG="none"

FROM $SOURCE_IMG as builder

LABEL maintainer="valentina.vasco@iit.it" 

FROM $START_IMG

ENV DEBIAN_FRONTEND=noninteractive

# Copy the superbuild binary & entrypoint script from previous stage
COPY --from=builder /usr/local /usr/local
COPY --from=builder /usr/share /usr/share
#COPY --from=builder /projects/iCubContrib /projects/iCubContrib

ENTRYPOINT [ "/usr/local/bin/entrypoint.sh" ]


#The EXPOSE instruction does not actually publish the port. 
#It functions as a type of documentation between the person who builds the image and the person who runs the container, about which ports are intended to be published. 
#To actually publish the port when running the container, use the -p flag on docker run to publish and map one or more ports, or the -P flag to publish all exposed ports and map them to high-order ports.
EXPOSE 10000/tcp 10000/udp

# Some QT-Apps don't show controls without this
ENV QT_X11_NO_MITSHM 1
ENV YARP_COLORED_OUTPUT=1


CMD ["bash"]

